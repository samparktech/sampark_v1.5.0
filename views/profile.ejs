      function deleteAccount(){
         const message = "Do You really want to Delete your Account? You can't Undo this action.";
        if (confirm(message) ==  true) {
          window.location = '/deleteaccount/<%= user.username%>'
        return true;
      } else {
        return false
      }
      }
